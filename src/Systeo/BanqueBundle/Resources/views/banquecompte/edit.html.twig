{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block body %}
    <fieldset>
            <legend>{{ 'Modifier compte bancaire'}}</legend>
    </fieldset>
    <div class="row">
        <div class="col-lg-12">      
            <div class="btn_list pull-right">
                <a href="{{ path('banquecompte_index') }}"  class="btn btn-info">Liste des comptes bancaires <span class="glyphicon glyphicon-th-list"></span></a>
            </div>
        </div>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-lg-4">
            {{ form_row(edit_form.name) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(edit_form.banque) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(edit_form.rib) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(edit_form.swift) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(edit_form.iban) }}
        </div>
    </div>
     <input type="submit" value="Enregistrer" class="btn btn-success"/>
    {{ form_end(edit_form) }}

{% endblock %}