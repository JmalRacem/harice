{% extends 'layout.html.twig' %}
{% block body %}

    <fieldset>
        <legend>{{ 'Liste des catégories de dépense '}}</legend>
    </fieldset>
    <div class="btn_add">
        <a href="{{ path('depensecategory_new') }}"  class="btn btn-success pull-right">Ajouter une catégorie de dépense <span class="glyphicon glyphicon-plus"></span></a>
    </div>
    <div class="clear-both"></div>


    <table class="table table-bordered index_table">
        <thead>
            <tr>
                <th>Désignation</th>
                <th>Parent</th>
                <th id="index_th_action">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categ in depenseCategories %}
                <tr>
                    <td>{{categ.name}}</td>
                    <td>{%if categ.parent%}{{categ.parent.name}}{%endif%}</td>
                    <td>
                        <ul id="index_action_buttons">
                            <li>
                                <a href="{{ path('depensecategory_show', { 'id': categ.id }) }}"  class="btn btn-primary btn-xs">Détails <span class="glyphicon glyphicon-search"></span></a>
                            </li>
                            <li>
                                <a href="{{ path('depensecategory_edit', { 'id': categ.id }) }}"  class="btn btn-warning btn-xs">Modifier  <span class="glyphicon glyphicon-edit"></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(depenseCategories) }}
    </div>         
{% endblock %}