{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% block body %}
    {% for type in ['danger', 'info', 'success'] %}        
            {% for flash_message in app.session.flashBag.get(type) %}
                <div class="alert alert-{{type}}" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}  
        {% endfor %}  
    <link rel="stylesheet" href="{{ asset('bundles/systeofile/css/main.css') }}" type="text/css" />
  
    <div class="row">
        
            {%if file.image == 1 %}
                <div class="col-lg-4">
                <div class='show-files'>
                    <img src="{{ asset('files/') }}{{file.path}}/{{file.fileName}}" alt="{{file.name}}" />
                </div>
                </div>
            {%else%}
                <div class="col-lg-12">
                <a href="{{ asset('files/') }}{{file.path}}/{{file.fileName}}" target="_blank">{{file.name}}</a>
                </div>
            {%endif%}
        </div>
    </div>
        <p>&nbsp</p>
    <div class="row">
        <div class="col-lg-12">
            {{ form_start(edit_form, {'attr': {'action':path('file_edit_ajax', { 'id': file.id}),'id':'file-edit-form','novalidate': 'novalidate'}}) }}
                {{ form_widget(edit_form) }}
                <input type="button" id="submit_edit_ajax_file" value="Enregistrer" class="btn btn-success"/>
            {{ form_end(edit_form) }}
        </div>
    </div>
       
{% endblock %}
