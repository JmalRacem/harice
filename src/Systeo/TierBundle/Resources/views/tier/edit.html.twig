{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block body %}
    <script  src="{{ asset('bundles/systeotier/js/main.js') }}" ></script>
    <fieldset>
            <legend>{{ 'Nouveau tier'}}</legend>
    </fieldset>
    <div class="row">
        <div class="col-lg-12">      
            <div class="btn_list pull-right">
                <a href="{{ path('tier_index') }}"  class="btn btn-info">Liste des tiers <span class="glyphicon glyphicon-th-list"></span></a>
            </div>
        </div>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-lg-2">
            {{ form_row(edit_form.type) }}
        </div>
        <div class="col-lg-10 tier-personne-morale">
            {{ form_row(edit_form.rs) }}
        </div>
        <div class="col-lg-5 tier-personne-physique">
            {{ form_row(edit_form.firstName) }}
        </div>
        <div class="col-lg-5 tier-personne-physique">
            {{ form_row(edit_form.lastName) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            {{ form_row(edit_form.client) }}
        </div>
        
        <div class="col-lg-2">
            {{ form_row(edit_form.fournisseur) }}
        </div>
         <div class="col-lg-2">
            {{ form_row(edit_form.employe) }}
        </div>
        
        <div class="col-lg-3">
            {{ form_row(edit_form.mf) }}
        </div>
        <div class="col-lg-3">
            {{ form_row(edit_form.rc) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            {{ form_row(edit_form.rueNumero1) }}
        </div>
        <div class="col-lg-2">
            {{ form_row(edit_form.cp1) }}
        </div>
        <div class="col-lg-2">
            {{ form_row(edit_form.ville1) }}
        </div>
        <div class="col-lg-2">
            {{ form_row(edit_form.pays1) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            {{ form_row(edit_form.tel1) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(edit_form.email1) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(edit_form.fax1) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            {{ form_row(edit_form.tel2) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(edit_form.email2) }}
        </div>
    </div>
     <input type="submit" value="Enregistrer" class="btn btn-success"/>
    {{ form_end(edit_form) }}
    
    <script>
        tierTypeChanges('{{tier.type}}');
        tierClientChanges('{{tier.client}}');
        tierFournisseurChanges('{{tier.fournisseur}}');
    </script>
{% endblock %}