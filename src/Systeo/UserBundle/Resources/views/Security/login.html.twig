{% extends 'layout.html.twig' %}
{% block body %}
    <div class="container">    
        <div id="loginbox" style="margin-top:100px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Authentification</div>
                </div>     

                <div style="padding-top:30px" class="panel-body" >
                    {% if error %}
                        <div  id="login-alert" class="alert alert-danger col-sm-12">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <form action="{{ path("login_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="Identifiant" required="required" />                                       
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required="required" />
                        </div>



                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Se souvenir de moi
                                </label>
                            </div>
                        </div>


                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="Valider" />
                               
                            </div>
                        </div>
                    </form>     



                </div>                     
            
        </div>

    </div>
    </form>
{% endblock %}
